{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sapper",
  "version": "0.3.1",
  "identifier": "com.clip.sapper",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "sapper",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$HOME/.sapper/**",
          "$HOME/.sapper/imports/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIyMDlEMUFDODA3QjJFMDcKUldRSExudUFyTkVKSXJWNFlyd0dDZk5kUlNXV3JLSU5HRUR4NlJBMThWVmUxN1FwK1V2WXZpWWwK",
      "endpoints": [
        "https://raw.githubusercontent.com/hiwumo/sapper/main/update-manifest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
